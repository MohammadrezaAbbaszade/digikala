<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#CA8BD6"
            android:drawableRight="@drawable/ic_phone_number"
            android:hint="شماره موبایل یا ایمیل" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#CA8BD6"
            android:drawableRight="@drawable/ic_lock"
            android:hint="کلمه عبور" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="ثبت نام در دیجی کالا"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:backgroundTint="#084D83"
        android:text="ورود به دیجی کالا"
        android:textSize="20sp" />
    <ImageView
        android:layout_marginBottom="53dp"
        android:layout_gravity="center"
        android:src="@drawable/shape3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>