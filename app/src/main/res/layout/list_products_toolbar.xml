<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/list_products_toolbar_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/ic_shop" />

    <ImageView
        android:id="@+id/list_product_toolbar_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?selectableItemBackgroundBorderless"
        android:focusable="true"
        android:clickable="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/list_product_toolbar_cart_badge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/badge_circle"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@android:color/white"
        android:text="0"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/list_product_toolbar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="55dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/list_product_toolbar_search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/ic_search"
        android:layout_marginRight="10dp"/>

</FrameLayout>