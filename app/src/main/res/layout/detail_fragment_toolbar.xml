<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/detail_fragment_toolbar"
    android:background="@color/colorPrimaryDark">


    <ImageButton
        android:id="@+id/detail_fragment_toolbar_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/ic_shop" />
    <ImageButton
        android:id="@+id/detail_fragment_toolbar_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="end"
        android:background="@drawable/ic_arrow" />
    <TextView
        android:id="@+id/detail_fragment_cart_badge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/badge_circle"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@android:color/white"
        android:text="0"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/detail_fragment_toolbar_text_view"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="55dp"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:textDirection="rtl"
        android:layout_height="wrap_content"/>
</FrameLayout>