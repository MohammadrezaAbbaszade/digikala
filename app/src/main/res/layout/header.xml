<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/header_of_navigation"
    android:layout_height="120dp">
  <ImageView
      android:id="@+id/main_toolbal_login_image_view"
      android:layout_marginTop="70dp"
      android:layout_gravity="bottom|right"
      android:src="@drawable/login_register_label"
      android:layout_width="150dp"
      android:layout_height="50dp"/>
  <LinearLayout
      android:id="@+id/header_linear"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right"
      android:clickable="true"
      android:layout_marginRight="15dp"
      android:orientation="horizontal">
  <ImageView
      android:id="@+id/main_header_user_image_view"
     android:layout_weight="1"
      android:src="@drawable/ic_user"
      android:layout_width="30dp"
      android:layout_height="50dp"/>
    <TextView
        android:id="@+id/main_header_number_text_view"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09396126208"
        android:textColor="@color/white"
        />
  </LinearLayout>
</FrameLayout>