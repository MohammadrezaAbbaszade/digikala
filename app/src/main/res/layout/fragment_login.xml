<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="top|center"

        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_login_first_name_edit_text"
            android:layout_width="350dp"
            android:layout_height="50dp"

            android:backgroundTint="#CA8BD6"
            android:drawableRight="@drawable/ic_user_info"
            android:hint="نام" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_last_name_edit_text"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#CA8BD6"
            android:drawableRight="@drawable/ic_user_info"
            android:hint="نام خانوادگی" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_login_email_edit_text"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#CA8BD6"
            android:drawableRight="@drawable/ic_message"
            android:hint="ایمیل" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_login_phone_number_edit_text"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="#CA8BD6"
            android:layout_marginTop="25dp"
            android:drawableRight="@drawable/ic_phone_number"
            android:hint="شماره موبایل" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_login_password_edit_text"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#CA8BD6"
            android:drawableRight="@drawable/ic_lock"
            android:hint="کلمه عبور" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_login_register_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/green"
        android:text="ثبت نام در دیجی کالا"
        android:textSize="20sp" />
</FrameLayout>